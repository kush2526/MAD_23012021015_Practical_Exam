<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Video Header with controls -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/videoThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_video_thumbnail" /> <!-- Place a thumbnail image -->

            <!-- Overlay: Pause Icon (top-left) -->
            <ImageButton
                android:id="@+id/btnPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pause"
                android:tint="#FFFFFF" />

            <!-- Overlay: Volume Icon (top-right) -->
            <ImageButton
                android:id="@+id/btnVolume"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_volume"
                android:tint="#FFFFFF" />

            <!-- Overlay: Text at bottom -->
        </FrameLayout>

        <!-- Conference Details Section -->
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/conferenceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech Conference 2025"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/conferenceLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mehsana, Gujarat | 2.5 km away"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/conferenceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Join us for a deep dive into the future of technology."
                android:textColor="#999999"
                android:textSize="14sp" />

            <!-- Live Updates -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/red_circle"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/liveUpdates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live Updates Active"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Featured Speakers -->
        <TextView
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Featured Speakers"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/featuredSpeakers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <!-- Speaker 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/speaker_card_bg"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:elevation="2dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_speaker1"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Dr. Emily Chen"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:text="AI Researcher"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Speaker 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/speaker_card_bg"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:elevation="2dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_speaker2"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Jake Wharton"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:text="Android GDE"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Speaker 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/speaker_card_bg"
                android:padding="12dp"
                android:layout_margin="4dp"
                android:elevation="2dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_speaker3"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:text="Sarah Connor"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:text="Security Expert"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Schedule Filter Buttons -->
        <LinearLayout
            android:id="@+id/scheduleFilters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="ALL"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:background="@drawable/btn_selected_bg"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnKeynote"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="KEYNOTE"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:background="@drawable/btn_unselected_bg"
                android:textColor="#AAAAAA"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnWorkshop"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="WORKSHOP"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:background="@drawable/btn_unselected_bg"
                android:textColor="#AAAAAA"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnNetworking"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="NETWORKING"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:background="@drawable/btn_unselected_bg"
                android:textColor="#AAAAAA"/>
        </LinearLayout>

        <!-- Schedule Item -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f8f8f8"
            android:padding="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/scheduleTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00 AM"
                    android:textColor="#9e9e9e"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/scheduleTitle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Opening Ceremony"
                    android:textStyle="bold"
                    android:textColor="#424242"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/expandIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_expand_more"
                    android:tint="#424242"/>
            </LinearLayout>

            <TextView
                android:id="@+id/scheduleCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL"
                android:textSize="12sp"
                android:textColor="#9e9e9e"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <Button
                android:id="@+id/btnBuyTickets"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Buy Tickets"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#1967d2"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnCalendar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Calendar"
                android:textColor="#1967d2"
                android:textStyle="bold"
                android:backgroundTint="#FFFFFF"
                android:elevation="2dp"
                android:background="@drawable/button_border"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>